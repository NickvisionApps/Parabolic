using Gtk 4.0;
using Adw 1;

Adw.Bin _root {
  Gtk.Box {
    orientation: vertical;

    Gtk.Box {
      orientation: horizontal;
      margin-start: 6;
      margin-top: 6;
      margin-end: 6;
      spacing: 6;

      Gtk.Image _statusIcon {
        icon-name: "folder-download-symbolic";
        pixel-size: 16;
        margin-start: 12;
        margin-end: 6;
        valign: center;

        styles ["status-icon", "stopped"]
      }
      
      Gtk.Box {
        orientation: vertical;
        spacing: 3;
        margin-top: 8;
        margin-bottom: 8;
        hexpand: true;
        
        Gtk.Label _filenameLabel {
          halign: start;
          ellipsize: end;
          lines: 1;
        }

        Gtk.Label  _progressLabel {
          label: _("Waiting...");
          halign: start;
          ellipsize: end;
          lines: 1;

          styles ["caption", "dim-label"]
        }
      }

      Gtk.ToggleButton _viewLogToggleBtn {
        valign: center;
        icon-name: "utilities-terminal-symbolic";
        tooltip-text: _("View Log");

        styles ["circular"]
      }

      Adw.ViewStack _actionViewStack {
        margin-start: 1;
        margin-end: 10;
        hhomogeneous: false;
        
        Adw.ViewStackPage {
          name: "cancel";
          child: Gtk.Button _stopButton {
            valign: center;
            icon-name: "media-playback-stop-symbolic";
            tooltip-text: _("Stop Download");

            styles ["circular"]
          };
        }

        Adw.ViewStackPage {
          name: "open";
          child: Gtk.Box {
            orientation: horizontal;
            spacing: 6;
            
            Gtk.Button  _openFileButton {
              valign: center;
              icon-name: "media-playback-start-symbolic";
              tooltip-text: _("Open File");

              styles ["circular"]
            }

            Gtk.Button  _openFolderButton {
              valign: center;
              icon-name: "folder-symbolic";
              tooltip-text: _("Open Folder");

              styles ["circular"]
            }
          };
        }

        Adw.ViewStackPage {
          name: "retry";
          child: Gtk.Button _retryButton {
            valign: center;
            icon-name: "view-refresh-symbolic";
            tooltip-text: _("Retry Download");
              
            styles ["circular"]
          };
        }
      }
    }

    Adw.ViewStack _stateViewStack {
      margin-start: 16;
      margin-end: 16;
      margin-bottom: 12;

      Adw.ViewStackPage {
        name: "downloading";
        child: Gtk.ProgressBar _progressBar {
          hexpand: true;
          margin-top: 6;
        };
      }

      Adw.ViewStackPage {
        name: "processing";
        child: Gtk.ProgressBar _pulsingBar {
          hexpand: true;
          margin-top: 6;
        };
      }

      Adw.ViewStackPage {
        name: "done";
        child: Gtk.LevelBar _levelBar {
          hexpand: true;
          margin-top: 6;
        };
      }
    }

    Gtk.Overlay _overlayLog {
      visible: bind _viewLogToggleBtn.active;

      [overlay]
      Gtk.Button _btnLogToClipboard {
        icon-name: "edit-copy-symbolic";
        tooltip-text: _("Copy to Clipboard");
        vexpand: true;
        halign: end;
        valign: end;
        margin-bottom: 7;
        margin-end: 15;

        styles ["opaque"]
      }

      Gtk.ScrolledWindow _scrollLog {
        height-request: 100;

        child: Gtk.TextView _lblLog {
          margin-start: 12;
          margin-top: 6;
          margin-end: 6;
          margin-bottom: 12;
          editable: false;
          wrap-mode: char;

          styles ["transparent"]
        };
      }

      styles ["logs"]
    }
  }
}