using Gtk 4.0;
using Adw 1;

menu mainMenu {
  item(_("Keyring"), "win.keyring")
  item(_("Preferences"), "win.preferences")
  item(_("Keyboard Shortcuts"), "win.keyboardShortcuts")
  item(_("About Tube Converter"), "win.about")
}

Adw.ApplicationWindow _root {
  default-width: 800;
  default-height: 600;
  width-request: 360;
  
  Gtk.Overlay {
    vexpand: true; 
    
    [overlay]
    Adw.Bin _spinnerContainer {
      hexpand: true;
      vexpand: true;
      
      Gtk.Spinner _spinner {
        width-request: 48;
        height-request: 48;
        halign: center;
        valign: center;
        hexpand: true;
        vexpand: true;
      }
    }
    
    Gtk.Box _mainBox {
      orientation: vertical;

      Adw.HeaderBar _headerBar {
        title-widget: Adw.WindowTitle {
          title: _("Tube Converter");
        };
        
        [start]
        Gtk.Button _addDownloadButton {
          action-name: "win.addDownload";
          tooltip-text: _("Add Download (Ctrl+N)");
          visible: false;
          Adw.ButtonContent {
            icon-name: "list-add-symbolic";
            label: _("Add");
          }
        }

        [end]
        Gtk.MenuButton {
          direction: none;
          menu-model: mainMenu;
          tooltip-text: _("Main Menu");
          primary: true;
        }

        styles ["flat"]
      }
      
      Adw.ToastOverlay _toastOverlay {
        hexpand: true;
        vexpand: true;
        Adw.ViewStack _viewStack {
          Adw.ViewStackPage {
            name: "pageNoDownloads";
            child: Adw.StatusPage {
              icon-name: "org.nickvision.tubeconverter";
              title: _("Download Media");
              description: _("Add a video, audio, or playlist URL to start downloading");
              child: Gtk.Button {
                label: _("Add Download");
                halign: center;
                action-name: "win.addDownload";
                styles ["pill", "suggested-action"]
              };

              styles ["icon-dropshadow"]
            };
          }
          
          Adw.ViewStackPage {
            name: "pageDownloads";
            child: Gtk.ScrolledWindow {
              Adw.Clamp {
                maximum-size: 800;
                margin-start: 12;
                margin-end: 12;
                margin-top: 12;
                margin-bottom: 12;
                
                Gtk.Box {
                  orientation: vertical;
                  spacing: 20;
                  hexpand: true;
                  valign: start;
                      

                  Gtk.Box {
                    orientation: vertical;
                    spacing: 10;
                    visible: false;

                    Gtk.Box {
                      hexpand: true;
                      orientation: horizontal;

                      Gtk.Label {
                        label: _("Downloading");
                        halign: start;
                        margin-start: 5;
                        hexpand: true;
                        styles ["heading"]
                      }

                      Gtk.Button _stopAllDownloadsButton {
                        halign: end;
                        action-name: "win.stopAllDownloads";
                        tooltip-text: _("Stop All Downloads");
                        visible: false;

                        Adw.ButtonContent {
                          icon-name: "media-playback-stop-symbolic";
                          label: _("Stop All");
                        }

                        styles ["flat"]
                      }
                    }
                  
                    Gtk.Box _downloadingBox {
                      orientation: vertical;
                      hexpand: true;
                      valign: start;
                      styles ["card"]
                    }
                  }

                  Gtk.Box {
                    orientation: vertical;
                    spacing: 10;
                    visible: false;

                    Gtk.Box {
                      hexpand: true;
                      orientation: horizontal;

                      Gtk.Label {
                        label: _("Queued");
                        halign: start;
                        margin-start: 5;
                        hexpand: true;
                        styles ["heading"]
                      }

                      Gtk.Button {
                        halign: end;
                        action-name: "win.clearQueuedDownloads";
                        tooltip-text: _("Clear Queued Downloads");

                        Adw.ButtonContent {
                          icon-name: "user-trash-symbolic";
                          label: _("Clear");
                        }

                        styles ["flat"]
                      }
                    }
                  
                    Gtk.Box _queuedBox {
                      orientation: vertical;
                      hexpand: true;
                      valign: start;
                      styles ["card"]
                    }
                  }

                  Gtk.Box {
                    orientation: vertical;
                    spacing: 10;
                    visible: false;

                    Gtk.Box {
                      hexpand: true;
                      orientation: horizontal;

                      Gtk.Label {
                        label: _("Completed");
                        halign: start;
                        margin-start: 5;
                        hexpand: true;
                        styles ["heading"]
                      }

                      Gtk.Button {
                        halign: end;
                        icon-name: "view-refresh-symbolic";
                        action-name: "win.retryFailedDownloads";
                        tooltip-text: _("Retry Failed Downloads");

                        styles ["flat"]
                      }

                      Gtk.Button {
                        halign: end;
                        action-name: "win.clearCompletedDownloads";
                        tooltip-text: _("Clear Completed Downloads");

                        Adw.ButtonContent {
                          icon-name: "user-trash-symbolic";
                          label: _("Clear");
                        }

                        styles ["flat"]
                      }
                    }

                    Gtk.Box _completedBox {
                      orientation: vertical;
                      hexpand: true;
                      valign: start;
                      styles ["card"]
                    }
                  }
                }
              }
            };
          }
        }
      }
    }
  }
}