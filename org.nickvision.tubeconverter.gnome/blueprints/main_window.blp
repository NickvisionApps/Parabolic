using Gtk 4.0;
using Adw 1;

menu mainMenu {
  item(_("Preferences"), "win.preferences")
  item(_("Keyboard Shortcuts"), "win.keyboardShortcuts")
  item(_("Help"), "win.help")
  item(_("About Parabolic"), "win.about")
}

Adw.ApplicationWindow root {
  width-request: 360;
  height-request: 200;

  Adw.Breakpoint breakpoint {
    condition ("max-width: 400sp")
    
    setters {
      navView.collapsed: true;
    }
  }

  content: Adw.NavigationSplitView navView {
    show-content: true;

    sidebar: Adw.NavigationPage navPageSidebar {
      tag: "sidebar";

      child: Adw.ToolbarView {
        [top]
        Adw.HeaderBar {
          title-widget: Adw.WindowTitle title {};
      
          [start]
          Gtk.Button {
            icon-name: "list-add-symbolic";
            tooltip-text: _("Add Download");
            action-name: "win.addDownload";
          }

          [end]
          Gtk.MenuButton {
            direction: none;
            menu-model: mainMenu;
            tooltip-text: _("Main Menu");
            primary: true;
          }
        }

        content: Gtk.ScrolledWindow {
          hscrollbar-policy: never;
          vscrollbar-policy: automatic;

          Gtk.ListBox listNavItems {
            Gtk.Box {
              margin-start: 6;
              margin-top: 6;
              margin-end: 6;
              margin-bottom: 6;
              orientation: horizontal;
              spacing: 12;

              Gtk.Image {
                icon-name: "user-home-symbolic";
              }

              Gtk.Label {
                label: _("Home");
              }
            }

            Gtk.Box {
              margin-start: 6;
              margin-top: 6;
              margin-end: 6;
              margin-bottom: 6;
              orientation: horizontal;
              spacing: 12;

              Gtk.Image {
                icon-name: "dialog-password-symbolic";
              }

              Gtk.Label {
                label: _("Keyring");
              }
            }

            Gtk.Box {
              margin-start: 6;
              margin-top: 6;
              margin-end: 6;
              margin-bottom: 6;
              orientation: horizontal;
              spacing: 12;

              Gtk.Image {
                icon-name: "emoji-recent-symbolic";
              }

              Gtk.Label {
                label: _("History");
              }
            }

            Gtk.ListBoxRow {
              selectable: false;
              activatable: false;

              Gtk.Label {
                halign: start;
                label: _("Downloads");

                styles ["heading"]
              }
            }

            Gtk.Box {
              margin-start: 6;
              margin-top: 6;
              margin-end: 6;
              margin-bottom: 6;
              orientation: horizontal;
              spacing: 12;

              Gtk.Image {
                icon-name: "folder-download-symbolic";
              }

              Gtk.Label {
                label: _("Downloading");
              }
            }

            Gtk.Box {
              margin-start: 6;
              margin-top: 6;
              margin-end: 6;
              margin-bottom: 6;
              orientation: horizontal;
              spacing: 12;

              Gtk.Image {
                icon-name: "hourglass-symbolic";
              }

              Gtk.Label {
                label: _("Queued");
              }
            }

            Gtk.Box {
              margin-start: 6;
              margin-top: 6;
              margin-end: 6;
              margin-bottom: 6;
              orientation: horizontal;
              spacing: 12;

              Gtk.Image {
                icon-name: "check-round-outline-symbolic";
              }

              Gtk.Label {
                label: _("Completed");
              }
            }

            styles ["navigation-sidebar"]
          }
        };
      };
    };

    content: Adw.NavigationPage navPageContent {
      tag: "content";

      child: Adw.ToolbarView {
        [top]
        Adw.HeaderBar {}

        content: Adw.ToastOverlay toastOverlay {
          child: Adw.ViewStack viewStack {
            hexpand: true;
            vexpand: true;

            Adw.ViewStackPage {
              name: "home";
              child: Adw.StatusPage {
                icon-name: "org.nickvision.tubeconverter";
                title: _("Download Media");
                description: _("Add a video, audio, or playlist URL to start downloading");
                child: Gtk.Button {
                  halign: center;
                  label: _("Add Download");
                  action-name: "win.addDownload";

                  styles ["pill", "suggested-action"]
                };
                
                styles ["icon-dropshadow"]
              };
            }

            Adw.ViewStackPage {
              name: "keyring";
              child: Adw.Bin binKeyring { 
                hexpand: true;
                vexpand: true;
              };
            }

            Adw.ViewStackPage {
              name: "history";
              child: Adw.ViewStack historyViewStack {
                Adw.ViewStackPage {
                  name: "no-history";
                  child: Adw.StatusPage {
                      icon-name: "snapshots-alt-symbolic";
                      title: _("No history available");

                      styles ["compact"]
                  };
                }

                Adw.ViewStackPage {
                  name: "history";
                  child: Gtk.ScrolledWindow {
                    child: Adw.Clamp {
                      maximum-size: 600;
                      child: Adw.PreferencesGroup historyGroup {
                        title: _("Past Downloads");
                        header-suffix: Gtk.Button {
                          valign: center;
                          action-name: "win.clearHistory";
                          tooltip-text: _("Clear History");
    
                          Adw.ButtonContent {
                            icon-name: "user-trash-symbolic";
                            label: _("Clear");
                          }

                          styles ["flat"]
                        };
                      };
                    };
                  };
                }
              };
            }

            Adw.ViewStackPage {
              name: "downloading";
              child: Adw.Clamp {
                maximum-size: 600;
                child: Adw.ViewStack downloadingViewStack {
                  Adw.ViewStackPage {
                    name: "no-downloading";
                    child: Adw.StatusPage {
                      icon-name: "folder-download-symbolic";
                      title: _("No Downloads Running");
                      child: Gtk.Button {
                        halign: center;
                        label: _("Add Download");
                        action-name: "win.addDownload";

                        styles ["pill", "suggested-action"]
                      };
                    };
                  }

                  Adw.ViewStackPage {
                    name: "downloading";
                    child: Gtk.Box {
                      orientation: vertical;
                      hexpand: true;
                      valign: start;
                      spacing: 6;

                      Gtk.Button {
                        halign: end;
                        tooltip-text: _("Stop All Downloads");
                        action-name: "win.stopAllDownloads";

                        Adw.ButtonContent {
                          icon-name: "media-playback-stop-symbolic";
                          label: _("Stop");
                        }

                        styles [ "flat" ]
                      }

                      Gtk.Box listDownloading {
                        orientation: vertical;

                        styles [ "card" ]
                      }
                    };
                  }
                };
              };
            }

            Adw.ViewStackPage {
              name: "queued";
              child: Adw.Clamp {
                maximum-size: 600;
                child: Adw.ViewStack queuedViewStack {
                  Adw.ViewStackPage {
                    name: "no-queued";
                    child: Adw.StatusPage {
                      icon-name: "hourglass-symbolic";
                      title: _("No Downloads Queued");
                      child: Gtk.Button {
                        halign: center;
                        label: _("Add Download");
                        action-name: "win.addDownload";

                        styles ["pill", "suggested-action"]
                      };
                    };
                  }

                  Adw.ViewStackPage {
                    name: "queued";
                    child: Gtk.Box {
                      orientation: vertical;
                      hexpand: true;
                      valign: start;
                      spacing: 6;

                      Gtk.Button {
                        halign: end;
                        tooltip-text: _("Clear Queued Downloads");
                        action-name: "win.clearQueuedDownloads";

                        Adw.ButtonContent {
                          icon-name: "user-trash-symbolic";
                          label: _("Clear");
                        }

                        styles [ "flat" ]
                      }

                      Gtk.Box listQueued {
                        orientation: vertical;

                        styles [ "card" ]
                      }
                    };
                  }
                };
              };
            }

            Adw.ViewStackPage {
              name: "completed";
              child: Adw.Clamp {
                maximum-size: 600;
                child: Adw.ViewStack completedViewStack {
                  Adw.ViewStackPage {
                    name: "no-completed";
                    child: Adw.StatusPage {
                      icon-name: "check-round-outline-symbolic";
                      title: _("No Downloads Completed");
                      child: Gtk.Button {
                        halign: center;
                        label: _("Add Download");
                        action-name: "win.addDownload";

                        styles ["pill", "suggested-action"]
                      };
                    };
                  }

                  Adw.ViewStackPage {
                    name: "completed";
                    child: Gtk.Box {
                      orientation: vertical;
                      hexpand: true;
                      valign: start;
                      spacing: 6;

                      Gtk.Box {
                        halign: end;
                        orientation: horizontal;
                        spacing: 6;

                        Gtk.Button {
                          tooltip-text: _("Clear Completed Downloads");
                          action-name: "win.clearCompletedDownloads";

                          Adw.ButtonContent {
                            icon-name: "user-trash-symbolic";
                            label: _("Clear");
                          }

                          styles [ "flat" ]
                        }

                        Gtk.Button btnRetryFailedDownloads {
                          icon-name: "view-refresh-symbolic";
                          tooltip-text: _("Retry Failed Downloads");
                          action-name: "win.retryFailedDownloads";

                          styles [ "flat" ]
                        }
                      }

                      Gtk.Box listCompleted {
                        orientation: vertical;

                        styles [ "card" ]
                      }
                    };
                  }
                };
              };
            }
          };
        };
      };
    };
  };
}
