{
    "app-id" : "org.nickvision.tubeconverter",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "command" : "org.nickvision.tubeconverter",
    "finish-args":[
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--talk-name=com.canonical.Unity",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.ScreenSaver",
        "--filesystem=xdg-download"
    ],
    "cleanup":[
        "/include",
        "/lib/pkgconfig",
        "*.a"
    ],
    "modules" : [
        {
            "name": "boost",
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh --prefix=/app --with-libraries=system,date_time,json",
                "./b2 -j $FLATPAK_BUILDER_N_JOBS install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://boostorg.jfrog.io/artifactory/main/release/1.86.0/source/boost_1_86_0.tar.bz2",
                    "sha256": "1bed88e40401b2cb7a1f76d4bab499e352fa4d0c5f31c0dbae64e24d34d7513b"
                }
            ]
        },
        {
            "name": "maddy",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/include/maddy",
                "mv include/maddy/* /app/include/maddy"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/progsource/maddy",
                    "tag": "1.3.0"
                }
            ]
        },
        {
            "name": "libnick",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nickvisionapps/libnick",
                    "tag": "2024.11.1"
                }
            ]
        },
        "python3-modules.json",
        {
            "name": "ffmpeg",
            "config-opts": [
                "--disable-debug",
                "--disable-doc",
                "--disable-static",
                "--enable-gpl",
                "--enable-shared",
                "--disable-ffplay",
                "--disable-devices",
                "--enable-gnutls",
                "--enable-libmp3lame",
                "--enable-libopus",
                "--enable-libvorbis"
            ],
            "cleanup": [
                "/share/ffmpeg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ffmpeg.org/releases/ffmpeg-7.1.tar.xz",
                    "sha256": "40973d44970dbc83ef302b0609f2e74982be2d85916dd2ee7472d30678a7abe6",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://ffmpeg.org/releases/",
                        "pattern": ">(ffmpeg-([\\d.]+)\\.tar\\.xz)<"
                    }
                }
            ]
        },
        {
            "name": "aria2",
            "config-opts": [
                "--with-ca-bundle=/etc/ssl/certs/ca-certificates.crt"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/aria2/aria2/releases/download/release-1.37.0/aria2-1.37.0.tar.xz",
                    "sha256": "60a420ad7085eb616cb6e2bdf0a7206d68ff3d37fb5a956dc44242eb2f79b66b"
                }
            ]
        },
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.14.0"
                }
            ]
        },
        {
            "name": "libxmlplusplus",
            "buildsystem": "meson",
            "config-opts": [
                "-Dmaintainer-mode=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libxmlplusplus/libxmlplusplus",
                    "tag": "5.4.0"
                }
            ]
        },
        {
            "name": "org.nickvision.tubeconverter",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DUI_PLATFORM=gnome"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": ".."
                }
            ]
        }
    ]
}
