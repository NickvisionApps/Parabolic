{
    "app-id" : "org.nickvision.tubeconverter",
    "runtime" : "org.kde.Platform",
    "runtime-version" : "6.8",
    "sdk" : "org.kde.Sdk",
    "command" : "org.nickvision.tubeconverter",
    "finish-args":[
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--talk-name=com.canonical.Unity",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.ScreenSaver",
        "--talk-name=org.freedesktop.secrets",
        "--filesystem=xdg-download"
    ],
    "cleanup":[
        "/include",
        "/lib/cmake",
        "/lib/debug",
        "/lib/pkgconfig",
        "*.a"
    ],
    "modules" : [
        {
            "name": "boost",
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh --prefix=/app --with-libraries=system,date_time,json",
                "./b2 -j $FLATPAK_BUILDER_N_JOBS install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://archives.boost.io/release/1.88.0/source/boost_1_88_0.tar.bz2",
                    "sha256": "46d9d2c06637b219270877c9e16155cbd015b6dc84349af064c088e9b5b12f7b"
                }
            ]
        },
        {
            "name": "libsecret",
            "buildsystem": "meson",
            "config-opts": [
                "-Dmanpage=false",
                "-Dvapi=false",
                "-Dgtk_doc=false",
                "-Dintrospection=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libsecret",
                    "tag": "0.21.7"
                }
            ]
        },
        {
            "name": "maddy",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/include/maddy",
                "mv include/maddy/* /app/include/maddy"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/progsource/maddy",
                    "tag": "1.4.0"
                }
            ]
        },
        {
            "name": "libnick",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nickvisionapps/libnick",
                    "tag": "2025.3.6"
                }
            ]
        },
        "python3-modules.json",
        {
            "name": "ffmpeg",
            "buildsystem": "simple",
            "build-commands": [
                "mv bin/* /app/bin/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/yt-dlp/FFmpeg-Builds/releases/download/autobuild-2025-04-19-14-15/ffmpeg-n7.1.1-6-g48c0f071d4-linux64-gpl-7.1.tar.xz",
                    "sha256": "cb77f7eb7fc77ba466bde3fa8de15828a45448ce4402aba2b2c0fdd25b793e3c",
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://github.com/yt-dlp/FFmpeg-Builds/releases/download/autobuild-2025-04-19-14-15/ffmpeg-n7.1.1-6-g48c0f071d4-linuxarm64-gpl-7.1.tar.xz",
                    "sha256": "36b877c09ebee5456d3abbdd38fb7f366d26c3a38de42266664f4b2fa0225213",
                    "only-arches": [
                        "aarch64"
                    ]
                }
            ]
        },
        {
            "name": "aria2",
            "config-opts": [
                "--with-ca-bundle=/etc/ssl/certs/ca-certificates.crt"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/aria2/aria2/releases/download/release-1.37.0/aria2-1.37.0.tar.xz",
                    "sha256": "60a420ad7085eb616cb6e2bdf0a7206d68ff3d37fb5a956dc44242eb2f79b66b"
                }
            ]
        },
        {
            "name": "qlementine",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DQLEMENTINE_SANDBOX=OFF",
                "-DQLEMENTINE_SHOWCASE=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/oclero/qlementine",
                    "tag": "v1.2.2"
                }
            ]
        },
        {
            "name": "qlementine-icons",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/oclero/qlementine-icons",
                    "tag": "v1.8.1"
                }
            ]
        },
        {
            "name": "org.nickvision.tubeconverter",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DUI_PLATFORM=qt"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": ".."
                }
            ]
        }
    ]
}
