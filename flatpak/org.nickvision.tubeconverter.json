{
    "app-id" : "org.nickvision.tubeconverter",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "46",
    "sdk" : "org.gnome.Sdk",
    "command" : "org.nickvision.tubeconverter",
    "finish-args":[
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--talk-name=com.canonical.Unity"
    ],
    "cleanup":[
        "/include",
        "/lib/pkgconfig",
        "*.a"
    ],
    "modules" : [
        {
            "name": "boost",
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh --prefix=/app --with-libraries=system,date_time",
                "./b2 -j $FLATPAK_BUILDER_N_JOBS install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://boostorg.jfrog.io/artifactory/main/release/1.85.0/source/boost_1_85_0.tar.bz2",
                    "sha256": "7009fe1faa1697476bdc7027703a2badb84e849b7b0baad5086b087b971f8617"
                }
            ]
        },
        {
            "name": "jsoncpp",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/open-source-parsers/jsoncpp",
                    "tag": "1.9.5"
                }
            ]
        },
        {
            "name": "maddy",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/include/maddy",
                "mv include/maddy/* /app/include/maddy"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/progsource/maddy",
                    "tag": "1.3.0"
                }
            ]
        },
        {
            "name": "libnick",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nickvisionapps/libnick",
                    "tag": "2024.6.6"
                }
            ]
        },
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.12.0"
                }
            ]
        },
        {
            "name": "libxmlplusplus",
            "buildsystem": "meson",
            "config-opts": [
                "-Dmaintainer-mode=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libxmlplusplus/libxmlplusplus",
                    "tag": "5.2.0"
                }
            ]
        },
        {
            "name": "org.nickvision.tubeconverter",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": ".."
                }
            ]
        }
    ]
}
